  "name": "hmpps-manage-users",
  "description": "Nodejs application to support managing staff user account in hmpps auth",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.540.0",
