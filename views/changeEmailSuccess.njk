{% extends "./partials/layout.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title =  ("Username" if usernameChanged else "Email address") + " changed" %}

   {% block beforeContent %}
     {{ govukBreadcrumbs({
       items: [
         { text: "Home", href: homeUrl },
         { text: "Manage user accounts", href: '/' },
         { text: title }
       ]
     }) }}
   {% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {% set message = "A verification email has been sent to " + email  +
          (".<br>The new address will now have to be used to sign in." if usernameChanged) %}

        {{ govukPanel({
          titleText: ("Username" if usernameChanged else "Email address") + " changed",
          html: message,
          attributes: { "data-qa": "email" }
        }) }}
        <p class="govuk-body">
          {{ govukButton({
            text: "Continue",
            href: detailsLink,
            attributes: { "data-qa": "user-details" }
          }) }}
        </p>
      </div>
    </div>
  </div>
{% endblock %}
