{% extends "./partials/layout.njk" %}
{%- from "govuk/components/select/macro.njk" import govukSelect -%}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "govuk/components/table/macro.njk" import govukTable -%}
{%- from "moj/components/pagination/macro.njk" import mojPagination -%}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}

{% set title =  "Search results" %}

 {% block beforeContent %}
   {{ govukBreadcrumbs({
     items: [
       { text: "Home", href: homeUrl },
       { text: "Manage user accounts", href: '/' },
       { text: searchTitle, href: searchUrl },
       { text: title}
     ]
   }) }}
 {% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <h1 class="govuk-heading-l">{{ title }}</h1>

    {% if results.length %}
      {% block searchFilter %}
        {% include "./partials/searchFilter.njk" %}
      {% endblock %}
      {{ mojPagination(pagination) }}

      <div class="govuk-grid-row">
        {% set rows = [] %}
        {% for u in results %}
          {% set userLink = '<a href="' + maintainUrl + '/' + u.username + '/details" class="govuk-link" data-qa="edit-button-'
            + u.username +'">' + u.firstName + '&nbsp;' + u.lastName + '</a>' %}
      {% set tags %}
      {{ govukTag({
        text: "Inactive",
        classes: "govuk-tag--pink"
      }) if not u.active }}
      {{ govukTag({
        text: "Active",
        classes: "govuk-tag--green"
      }) if u.active }}
      {% endset %}
          {% set rows = (rows.push([
            { html: userLink },
            { text: u.username },
            { text: u.email },
            { text: u.activeCaseLoadId },
            { html: tags }
          ]), rows) %}
        {% endfor %}

        {{ govukTable({
          head: [
            { text: "Name" },
            { text: "Username" },
            { text: "Verified email" },
            { text: "Active caseload" },
            { text: "Status" }
          ],
          rows: rows
        }) }}
      </div>
      {{ mojPagination(pagination) }}
    {% else %}
      <p class="govuk-body" data-qa="no-results">No records found matching search criteria.</p>
    {% endif %}
  </div>
{% endblock %}
