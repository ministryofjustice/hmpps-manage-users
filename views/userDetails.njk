{% extends "./partials/layout.njk" %}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "govuk/components/error-summary/macro.njk" import govukErrorSummary -%}
{%- from "govuk/components/table/macro.njk" import govukTable -%}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}

 {% block beforeContent %}
      {% if searchUrl === searchResultsUrl %}
      {% set breadcrumbs = 
        [
          { text: "Home", href: homeUrl },
          { text: "Manage user accounts", href: '/' },
          { text: searchTitle, href: searchUrl },
          { text: staff.name}
        ]
       %}
      {% else %}
      {% set breadcrumbs = 
        [
          { text: "Home", href: homeUrl },
          { text: "Manage user accounts", href: '/' },
          { text: searchTitle, href: searchUrl },
          { text: "Search results", href: searchResultsUrl },
          { text: staff.name}
        ]
       %}
     {% endif %}
   {{ govukBreadcrumbs({
     items: breadcrumbs
   }) }}
 {% endblock %}

{% block content %}
  {% if errors.length > 0 %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: errors,
      attributes: { 'data-qa-errors': true }
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <h1 class="govuk-heading-l">{{ staff.name }}</h1>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <table class="govuk-table">
          <tbody class="govuk-table__body">
          <tr class="govuk-table__row user-enabled-status">
            {% if showEnableDisable %}
              {% if staff.enabled %}
                <td class="govuk-table__cell">
                  {{ govukTag({
                    text: "Active account",
                    classes: "govuk-tag--turquoise",
                    attributes: { "data-qa": "enabled" }
                  }) }}
                </td>
                <td class="govuk-table__cell govuk-table__cell--numeric govuk-!-width-one-quarter">
                  <a href="{{ deactivateUserUrl }}" class="govuk-link" data-qa="enable-button">Deactivate account</a>
                </td>
              {% else %}
                <td class="govuk-table__cell">
                  {{ govukTag({
                    text: "Inactive account",
                    classes: "govuk-tag--pink",
                    attributes: { "data-qa": "enabled" }
                  }) }}
                </td>
                <td class="govuk-table__cell govuk-table__cell--numeric govuk-!-width-one-quarter">
                  <a href="{{ staffUrl }}/activate" class="govuk-link" data-qa="enable-button">Activate account</a>
                </td>
              {% endif %}
            {% else %}
              {% if staff.active %}
                <td class="govuk-table__cell">
                  {{ govukTag({
                    text: "Active account",
                    classes: "govuk-tag--turquoise",
                    attributes: { "data-qa": "enabled" }
                  }) }}
                </td>
              {% else %}
                <td class="govuk-table__cell">
                  {{ govukTag({
                    text: 'Inactive account - ' + staff.accountStatus,
                    classes: "govuk-tag--pink",
                    attributes: { "data-qa": "enabled" }
                  }) }}
                </td>
              {% endif %}
            {% endif %}
          </tr>
          </tbody>
        </table>

        {% set userDetails = [] %}
        {% set changeEmailLink = {
          html: '<a href="' + staffUrl + '/change-email" class="govuk-link" data-qa="amend-link">Change email</a>',
          classes: 'govuk-!-width-one-quarter',
          format: "numeric"
        } if showExtraUserDetails or hasMaintainDpsUsersAdmin else {} %}

        {% if showExtraUserDetails %}
          {% if showUsername %}
            {% set userDetails = userDetails.concat([
              [
                {text: "Username"},
                {text: staff.username},
                {text: ''}
              ]
            ]) %}
          {% endif %}
          {% set userDetails = userDetails.concat([
            [
              {text: ("Email" if showUsername else "Username / email")},
              {text: staff.email},
              changeEmailLink
            ],
            [
              {text: "Verified"},
              {text: staff.verified | formatYesNo()},
              {text: ''}
            ],
            [
              {text: "Locked"},
              {text: staff.locked | formatYesNo()},
              {text: ''}
            ],
            [
              {text: "Last logged in"},
              {text: staff.lastLoggedIn  | formatDate('D MMMM YYYY - HH:mm:ss')},
              {text: ''}
            ]
          ]) %}

        {% else %}
          {% set userDetails = userDetails.concat([
            [
              {text: "Username"},
              {text: staff.username},
              {text: ''}
            ],
            [
              {text: "Email"},
              {text: staff.email},
              changeEmailLink
            ]
          ]) %}

          {% if displayEmailChangeInProgress %}
            {% set userDetails = userDetails.concat([
              [
                {text: "Email change awaiting verification"},
                {text: staff.emailToVerify},
                {text: ''}
              ]
            ]) %}
          {% else %}
            {% set userDetails = userDetails.concat([
              [
                {text: "Verified"},
                {text: staff.verified | formatYesNo()},
                {text: ''}
              ]
            ]) %}
          {% endif %}
        {% endif %}

        {{ govukTable({
          caption: "Account details",
          rows: userDetails,
          attributes: { "data-qa": "user-details" }
        }) }}

        {% if staff.inactiveReason %}
          {{ govukTable({
            rows: [
              [
                {text: "Inactive reason"},
                {text: staff.inactiveReason}
              ]
            ],
            attributes: { "data-qa": "inactive-reason" }
          }) }}
        {% endif %}

        {% set rows = [] %}
        {% for userRole in roles %}
          {% set roleLink %}
            <a href="{{ staffUrl }}/roles/{{ userRole.roleCode }}/remove" class="govuk-link" data-qa="remove-button-{{ userRole.roleCode }}">Remove role</a>
          {% endset %}
          {% set rows = (rows.push([
            { text: userRole.roleName },
            { html: roleLink, classes: 'govuk-!-width-one-quarter', format: "numeric"}
          ]), rows) %}
        {% endfor %}

        {{ govukTable({
          caption: "Roles",
          rows: rows,
          attributes: { "data-qa": "user-roles" }
        }) }}

        {{ govukButton({
          text: "Add another role",
          element: 'a',
          href: staffUrl + '/select-roles',
          classes: "govuk-button",
          attributes: { "data-qa": "add-role-button" }
        }) }}

        {% if showGroups %}
          {% set rows = [] %}
          {% for userGroup in groups %}
            {% if userGroup.showRemove %}
              {% set groupLink %}
                <a href="{{ staffUrl }}/groups/{{ userGroup.groupCode }}/remove" class="govuk-link" data-qa="remove-button-{{ userGroup.groupCode }}">Remove from group</a>
              {% endset %}
              {% set rows = (rows.push([
                { text: userGroup.groupName },
                { html: groupLink, classes: 'govuk-!-width-one-quarter', format: "numeric" }
              ]), rows) %}
            {% else %}
              {% set rows = (rows.push([
                { text: userGroup.groupName },
                { text: "" }
              ]), rows) %}
            {% endif %}
          {% endfor %}

          {{ govukTable({
            caption: "Groups",
            rows: rows,
            attributes: { "data-qa": "user-groups" }
          }) }}

          {{ govukButton({
            text: "Add another group",
            element: 'a',
            href: staffUrl + '/select-group',
            classes: "govuk-button",
            attributes: { "data-qa": "add-group-button" }
          }) }}
        {% endif %}
        <p class="govuk-body">
          <a href="{{ searchUrl }}" class="govuk-link" data-qa="search-link">Search for a user</a>
        </p>
      </div>
    </div>
  </div>
{% endblock %}
